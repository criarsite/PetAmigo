@model IEnumerable<LovePet.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Cadastrar Bichinho</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raca)
                </td>
                <td>
                    <img width="250px" height="150px" src="@Html.DisplayFor(modelItem => item.ImagemUrl)">
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnimalId">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.AnimalId">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.AnimalId">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
